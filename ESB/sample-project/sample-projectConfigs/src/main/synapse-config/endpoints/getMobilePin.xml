<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="getMobilePin" xmlns="http://ws.apache.org/ns/synapse">
    <http method="get" uri-template="http://localhost:3666/api/payment/getMobilePin/{uri.var.mobile}">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
